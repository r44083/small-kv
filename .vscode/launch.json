{
    "version": "0.2.0",
    "configurations":
    [
        {
            "name": "gdb",
            "type": "cppdbg",
            "request": "launch",
            "windows":
            {
                "program": "${workspaceFolder}/build/small-kv.exe",
                "miDebuggerPath": "gdb.exe"
            },
            "linux":
            {
                "program": "${workspaceFolder}/build/small-kv",
                "miDebuggerPath": "gdb"
            },
            "cwd": "${workspaceFolder}/build",
            "externalConsole": true,
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": true,
            "preLaunchTask": "build",
            "setupCommands":
            [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing"
                }
            ]
        }
    ]
}